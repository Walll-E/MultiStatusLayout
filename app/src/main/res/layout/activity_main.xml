<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wall_e.multistatuslayout.MainActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请注意二级页面的布局文件用法"
        android:textColor="@color/colorAccent"
        android:textSize="22dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         />

    <Button
        android:id="@+id/btn_content"
        android:text="数据请求成功页面"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_light"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_netError"
        android:text="网络错误"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_light"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_error"
        android:text="服务器错误"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_purple"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_netError"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_empty"
        android:text="数据为空"
        android:textColor="@android:color/white"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_error"
        android:layout_height="wrap_content" />



</android.support.constraint.ConstraintLayout>
